<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/profile_comment_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/drawer_item_background"
    android:showDividers="end"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Review Title"
        android:id="@+id/profile_comment_list_title"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profile_comment_list_user_pic"
        android:layout_toEndOf="@+id/profile_comment_list_user_pic"
        android:paddingLeft="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date Created"
        android:id="@+id/profile_comment_list_date"
        android:layout_below="@+id/profile_comment_list_title"
        android:layout_alignLeft="@+id/profile_comment_list_title"
        android:layout_alignStart="@+id/profile_comment_list_title"
        android:paddingLeft="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Content"
        android:id="@+id/profile_comment_list_content"
        android:layout_alignLeft="@+id/profile_comment_list_date"
        android:layout_alignStart="@+id/profile_comment_list_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/profile_comment_list_date"
        android:layout_marginRight="11dp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:paddingLeft="11dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profile_comment_list_user_pic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_marginLeft="11dp"
        android:layout_alignParentTop="true" />
</RelativeLayout>