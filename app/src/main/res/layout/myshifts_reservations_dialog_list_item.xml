<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:showDividers="end"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/myshifts_reservations_dialog_reservation_name"
        android:visibility="visible"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignTop="@+id/myshifts_reservations_dialog_user_pic"
        android:layout_alignLeft="@+id/myshifts_reservations_dialog_pickup_time_label"
        android:layout_alignStart="@+id/myshifts_reservations_dialog_pickup_time_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pickup: "
        android:id="@+id/myshifts_reservations_dialog_pickup_time_label"
        android:visibility="visible"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/myshifts_reservations_dialog_user_pic"
        android:layout_toEndOf="@+id/myshifts_reservations_dialog_user_pic"
        android:layout_marginLeft="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Passengers: "
        android:id="@+id/myshifts_reservations_dialog_passengers_label"
        android:gravity="center_horizontal"
        android:layout_below="@+id/myshifts_reservations_dialog_pickup_time_label"
        android:layout_toRightOf="@+id/myshifts_reservations_dialog_user_pic"
        android:layout_toEndOf="@+id/myshifts_reservations_dialog_user_pic"
        android:layout_marginLeft="11dp"
        android:textColor="#000000"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:00"
        android:id="@+id/myshifts_reservations_dialog_pickup_time"
        android:layout_alignTop="@+id/myshifts_reservations_dialog_pickup_time_label"
        android:layout_toRightOf="@+id/myshifts_reservations_dialog_pickup_time_label"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/myshifts_reservations_dialog_user_pic"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/com_facebook_profile_default_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="#"
        android:id="@+id/myshifts_reservations_dialog_num_passengers"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/myshifts_reservations_dialog_passengers_label"
        android:layout_toEndOf="@+id/myshifts_reservations_dialog_passengers_label"
        android:layout_alignTop="@+id/myshifts_reservations_dialog_passengers_label"
        android:layout_alignBaseline="@+id/myshifts_reservations_dialog_passengers_label" />

</RelativeLayout>