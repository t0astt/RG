<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/myshifts_new_shift_dialog_start_time"
        android:hint="Start Time"
        android:elegantTextHeight="false"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textColorHint="#ffb4b4b4"
        android:textIsSelectable="false"
        android:theme="@style/Base.Widget.AppCompat.EditText"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:met_floatingLabel="highlight"
        android:editable="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/myshifts_new_shift_dialog_end_time"
        android:layout_marginTop="66dp"
        android:hint="End Time"
        android:gravity="center_horizontal"
        android:layout_below="@+id/myshifts_new_shift_dialog_start_time"
        android:layout_alignLeft="@+id/myshifts_new_shift_dialog_start_time"
        android:layout_alignStart="@+id/myshifts_new_shift_dialog_start_time"
        android:textColorHint="#ffb4b4b4"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:met_floatingLabel="highlight"
        android:editable="true" />



    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/myshifts_new_shift_dialog_num_seats"
        android:layout_marginTop="71dp"
        android:hint="Number of Seats"
        android:gravity="center_horizontal"
        android:layout_below="@+id/myshifts_new_shift_dialog_end_time"
        android:layout_alignLeft="@+id/myshifts_new_shift_dialog_end_time"
        android:layout_alignStart="@+id/myshifts_new_shift_dialog_end_time"
        android:textColorHint="#ffb4b4b4"
        app:met_floatingLabel="highlight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Only create a designated driver shift if you will be available during your selected times!"
        android:id="@+id/myshifts_new_shift_dialog_notice"
        android:layout_below="@+id/myshifts_new_shift_dialog_num_seats"
        android:layout_alignLeft="@+id/myshifts_new_shift_dialog_num_seats"
        android:layout_alignStart="@+id/myshifts_new_shift_dialog_num_seats"
        android:layout_alignRight="@+id/myshifts_new_shift_dialog_num_seats"
        android:layout_alignEnd="@+id/myshifts_new_shift_dialog_num_seats"
        android:gravity="center_horizontal" />

</RelativeLayout>