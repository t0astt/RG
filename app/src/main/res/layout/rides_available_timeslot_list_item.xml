<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/drawer_item_background"
    android:showDividers="end"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00:00"
        android:id="@+id/rides_available_timeslot_pickup_time"
        android:visibility="visible"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:textSize="30sp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="#"
        android:id="@+id/rides_available_timeslot_num_rides"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:clickable="true"
        android:layout_alignEnd="@+id/rides_available_timeslot_num_rides_label"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/rides_available_timeslot_num_rides_label"
        android:layout_alignParentTop="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rides"
        android:id="@+id/rides_available_timeslot_num_rides_label"
        android:gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:visibility="visible"
        android:layout_marginEnd="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/rides_available_timeslot_num_rides"
        android:layout_alignParentBottom="true" />

</RelativeLayout>