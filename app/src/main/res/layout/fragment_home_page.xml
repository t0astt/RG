<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mikerinehart.rideguide.main_fragments.HomePageFragment"
    android:background="#ffffffff">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to RideGuide"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/home_page_notifications_label"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.RecyclerView
    android:id="@+id/home_page_notification_list"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentTop="false"
    android:layout_alignParentStart="false"
    android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notifications"
        android:id="@+id/home_page_notifications_label"
        android:layout_above="@+id/home_page_notification_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No notifications!"
        android:id="@+id/home_page_no_notifications"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/home_page_notifications_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        android:textStyle="bold" />

</RelativeLayout>
