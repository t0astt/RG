<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Starting Location"
        android:id="@+id/rides_available_make_reservation_dialog_start_time_label"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/rides_available_make_reservation_dialog_start_time"
        android:layout_alignStart="@+id/rides_available_make_reservation_dialog_start_time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/rides_available_make_reservation_dialog_start_time"
        android:hint="Starting Location"
        android:elegantTextHeight="false"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textColorHint="#ffb4b4b4"
        android:textIsSelectable="true"
        android:theme="@style/Base.Widget.AppCompat.EditText"
        android:layout_below="@+id/rides_available_make_reservation_dialog_start_time_label"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/rides_available_make_reservation_dialog_end_time"
        android:layout_marginTop="66dp"
        android:hint="Destination"
        android:gravity="center_horizontal"
        android:layout_below="@+id/rides_available_make_reservation_dialog_start_time"
        android:layout_alignLeft="@+id/rides_available_make_reservation_dialog_start_time"
        android:layout_alignStart="@+id/rides_available_make_reservation_dialog_start_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Destination"
        android:id="@+id/rides_available_make_reservation_dialog_end_time_label"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/rides_available_make_reservation_dialog_start_time"
        android:layout_alignLeft="@+id/rides_available_make_reservation_dialog_end_time"
        android:layout_alignStart="@+id/rides_available_make_reservation_dialog_end_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Passengers"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/rides_available_make_reservation_dialog_end_time"
        android:layout_toRightOf="@+id/rides_available_make_reservation_dialog_end_time_label"
        android:layout_toEndOf="@+id/rides_available_make_reservation_dialog_end_time_label" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:showDividers="middle|end"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="43dp" />

</RelativeLayout>