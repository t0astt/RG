<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mikerinehart.rideguide.main_fragments.RidesFragment"
    android:background="#FFFFFF">

    <!-- TODO: Update blank fragment ride_info_list_item -->

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/rides_tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ColorPrimary"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        android:elevation="2dp"
        app:pstsIndicatorColor="@color/ColorAccent"
        app:pstsUnderlineColor="@color/ColorAccent"
        app:pstsShouldExpand="true"/>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rides_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rides_tabs" />

</RelativeLayout>
