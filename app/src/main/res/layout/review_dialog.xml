<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/review_dialog_review"
        android:layout_below="@+id/review_dialog_review_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="characters left"
        android:id="@+id/review_dialog_review_characters_left_count_label"
        android:layout_below="@+id/review_dialog_review"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="#"
        android:id="@+id/review_dialog_review_characters_count"
        android:layout_alignBottom="@+id/review_dialog_review_characters_left_count_label"
        android:layout_toLeftOf="@+id/review_dialog_review_characters_left_count_label"
        android:layout_toStartOf="@+id/review_dialog_review_characters_left_count_label"
        android:paddingRight="3dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/review_dialog_review_title"
        android:layout_below="@+id/review_dialog_review_title_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Review Title"
        android:id="@+id/review_dialog_review_title_label"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="#"
        android:id="@+id/review_dialog_title_characters_left_count"
        android:paddingRight="3dp"
        android:layout_alignTop="@+id/review_dialog_title_characters_left_count_label"
        android:layout_toLeftOf="@+id/review_dialog_title_characters_left_count_label"
        android:layout_toStartOf="@+id/review_dialog_title_characters_left_count_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="characters left"
        android:id="@+id/review_dialog_title_characters_left_count_label"
        android:layout_below="@+id/review_dialog_review_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Review"
        android:id="@+id/review_dialog_review_label"
        android:layout_below="@+id/review_dialog_title_characters_left_count"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>